[bar/laptop]
width = 100%
height = 27
radius = 0.0
fixed-center = true
monitor=${env:MONITOR:}

line-size = 3
line-color = ${color.blue}

background = ${color.bg1}
foreground = ${color.fg1}

font-0 = Iosevka:pixelsize=10;1
font-1 = Iosevka:pixelsize=15;1
font-2 = Iosevka:pixelsize=20;3

modules-left = title
modules-center = bspwm
modules-right = pulseaudio backlight cpu memory network filesystem battery date

wm-restack = bspwm

[bar/desktop]
width = 100%
height = 27
radius = 0.0
fixed-center = true
monitor=${env:MONITOR:}

line-size = 3
line-color = ${color.blue}

background = ${color.bg1}
foreground = ${color.fg1}

font-0 = Iosevka:pixelsize=10;1
font-1 = Iosevka:pixelsize=15;1
font-2 = Iosevka:pixelsize=15;3

modules-left = title
modules-center = bspwm
modules-right = pulseaudio cpu memory network filesystem date

wm-restack = bspwm


; ------------------------------------------------------------------------------
;     __  ___          __      __         
;    /  |/  /___  ____/ /_  __/ /__  _____
;   / /|_/ / __ \/ __  / / / / / _ \/ ___/
;  / /  / / /_/ / /_/ / /_/ / /  __(__  ) 
; /_/  /_/\____/\__,_/\__,_/_/\___/____/  
;                                         
; ------------------------------------------------------------------------------

[module/bspwm]
type = internal/bspwm

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-9 = 10;

ws-icon-default = 

label-focused = %{T3}%icon%%{T-} %name%
label-focused-foreground = ${color.fg0}
label-focused-background = ${color.bg2}
label-focused-underline = ${color.brightBlue}
label-focused-padding = 1

label-occupied = %{T3}%icon%%{T-} %name%
label-occupied-foreground = ${color.fg3}
label-occupied-padding = 1

label-empty = %{T3}%icon%%{T-} %name%
label-empty-foreground = ${color.bg4}
label-empty-padding = 1

label-dimmed-background = ${color.bg1}
label-dimmed-underline = ${color.bg1}
label-dimmed-padding = 1

format = <label-state>

[module/title]
type = internal/xwindow

format = <label>
format-padding = 1

label = %title%
label-maxlen = 30

label-empty = %{T2}%{T-} Arch Linux
label-empty-foreground = ${color.fg4}

[module/date]
type = internal/date

interval = 1.0

date = %A, %d %B
time = %I:%M%P
date-alt = %Y-%m-%d
time-alt = %Y-%m-%d %H:%M:%S

format = %{T2}%{T-} <label>
format-underline = ${color.cyan}
format-padding = 1

label = %time%

[module/battery]
type = internal/battery

full-at = 99

battery = BAT0
adapter = ADP1

poll-interval = 5

time-format = %H:%M


format-charging = %{T2}<animation-charging>%{T-} <label-charging>
format-discharging = %{T2}<ramp-capacity>%{T-} <label-discharging>
format-full = %{T2}<ramp-capacity>%{T-} <label-full>

format-charging-underline = ${color.magenta}
format-discharging-underline = ${color.magenta}
format-full-underline = ${color.magenta}

format-charging-padding = 1
format-discharging-padding = 1
format-full-padding = 1

label-charging = %percentage%%
label-discharging = %percentage%%
label-full = %percentage%%

; Only applies if <ramp-capacity> is used
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

; Only applies if <bar-capacity> is used
bar-capacity-width = 10

; Only applies if <animation-charging> is used
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
; Framerate in milliseconds
animation-charging-framerate = 750

; Only applies if <animation-discharging> is used
animation-discharging-0 = 
animation-discharging-1 = 
animation-discharging-2 = 
animation-discharging-3 = 
animation-discharging-4 = 
; Framerate in milliseconds
animation-discharging-framerate = 500

[module/filesystem]
type = internal/fs

mount-0 = /

interval = 60

fixed-values = false

spacing = 2

format-mounted = %{T2}%{T-} <label-mounted>
format-unmounted = <label-unmounted>

label-mounted = %percentage_used%%

label-unmounted = 

format-mounted-underline = ${color.blue}
format-mounted-padding = 1

[module/network]
type = internal/network
interface = ${env:INTERFACE:}

interval = 3.0

unknown-as-up = true

format-connected = %{T2}直 %{T-}<label-connected>
format-disconnected = %{T2}睊 %{T-}<label-disconnected>
format-packetloss = %{T2}睊 %{T-}<label-connected>

label-connected = %essid%%
label-disconnected = 

format-connected-underline = ${color.yellow}
format-connected-padding = 1
format-disconnected-underline = ${color.yellow}
format-disconnected-padding = 1

[module/memory]
type = internal/memory

interval = 3

format = %{T2}﬙%{T-} <label>
format-underline = ${color.green}
format-padding = 1

label = %percentage_used%%

; Only applies if <bar-used> is used
bar-used-indicator =
bar-used-width = 50
bar-used-foreground-0 = #55aa55
bar-used-foreground-1 = #557755
bar-used-foreground-2 = #f5a70a
bar-used-foreground-3 = #ff5555
bar-used-fill = ▐
bar-used-empty = ▐
bar-used-empty-foreground = #444444

; Only applies if <ramp-used> is used
ramp-used-0 = ▁
ramp-used-1 = ▂
ramp-used-2 = ▃
ramp-used-3 = ▄
ramp-used-4 = ▅
ramp-used-5 = ▆
ramp-used-6 = ▇
ramp-used-7 = █

; Only applies if <ramp-free> is used
ramp-free-0 = ▁
ramp-free-1 = ▂
ramp-free-2 = ▃
ramp-free-3 = ▄
ramp-free-4 = ▅
ramp-free-5 = ▆
ramp-free-6 = ▇
ramp-free-7 = █

[module/cpu]
type = internal/cpu

interval = 1.0

format = %{T2}%{T-} <label>
format-underline = ${color.red}
format-padding = 1

label = %percentage%%

ramp-coreload-spacing = 0
ramp-coreload-0 = ▁
ramp-coreload-1 = ▂
ramp-coreload-2 = ▃
ramp-coreload-3 = ▄
ramp-coreload-4 = ▅
ramp-coreload-5 = ▆
ramp-coreload-6 = ▇
ramp-coreload-7 = █

ramp-load-0 = ▁
ramp-load-1 = ▂
ramp-load-2 = ▃
ramp-load-3 = ▄
ramp-load-4 = ▅
ramp-load-5 = ▆
ramp-load-6 = ▇
ramp-load-7 = █

[module/backlight]
type = internal/backlight
card = intel_backlight
enable-scroll = true

format = %{T2}<ramp>%{T-} <label>
format-underline = ${color.orange}
format-padding = 1

label = %percentage%%

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 
ramp-5 = 
ramp-6 = 

bar-width = 10
bar-indicator = |
bar-fill = ─
bar-empty = ─

[module/pulseaudio]
type = internal/pulseaudio

sink = alsa_output.pci-0000_12_00.3.analog-stereo

use-ui-max = true

interval = 5

format-volume = <ramp-volume> <label-volume>
format-muted = %{T2}ﱝ%{T-} <label-muted>

label-volume = %percentage:3%%
label-muted = %percentage:3%%
label-muted-foreground = ${color.fg4}

ramp-volume-0 = %{T3}奄%{T-}
ramp-volume-1 = %{T2}奔%{T-}
ramp-volume-2 = %{T2}墳%{T-}

format-volume-underline = ${color.cyan}
format-volume-padding = 1
format-muted-underline = ${color.cyan}
format-muted-padding = 1


; vim:ft=dosini
